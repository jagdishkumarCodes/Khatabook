<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/style.css">
    <title>Document</title>
</head>
<body>
    <div class="page2 files-page">
        <div class="container">
            <h1 class="header">List of Daily Expenses</h1>
            <form action="/files" method="get">
                <div class="list">
                    <% files.forEach(function(file) { %>
                    <div class="file">
        
        
                            <h3><%= file.name %></h3>
                            <div class="btn">
                                <a href="/Files/<%= file.id %>" class="view-btn" aria-label="View file <%= file.name %>">View</a>
                                <a href="/edit/<%= file.id %>" class="edit-btn" aria-label="Edit file <%= file.name %>">Edit</a>
                                <a href="/delete/<%= file.id %>" class="delete-btn" aria-label="Delete file">Delete</a>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                <form action="/" method="get">
                    <div class="New-button " >
                        <svg width="60px" height="60px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4 12H20M12 4V20" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                </form>
            <!-- Add a div to display the file contents with a loading indicator -->
            <div id="file-content">
                <div class="loading-indicator" style="display: none;">Loading...</div>
            </div>
        </div>
    </div>
    <script src="/public/script.js"></script>
</body>
</html>